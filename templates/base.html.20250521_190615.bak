            sidebar.style.transition = 'left 0.3s ease';
            sidebar.style.display = 'flex';
            sidebar.style.flexDirection = 'column';
            
            toggleButton.style.cursor = 'pointer';
            
            console.log("Sidebar toggle functionality initialized successfully");
        })();
    });
